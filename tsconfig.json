{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "sourceMap": false,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".", // Added for absolute imports from project root
    "paths": {
      "modules/*": ["modules/*"], // Alias to new modules facade
      "modules/pure/*": ["modules/pure/*"] // Alias to Pure modules
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "miff-nextjs"
  ]
}