---
import Nav from '../components/Nav.astro';
const title = Astro.props.title || 'MIFF';
const description = Astro.props.description || 'Modular, CLI-first, engine-agnostic game dev for remixers and contributors.';
const base = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="stylesheet" href={`${base}styles/global.css`} />
		<style>
			/***** pseudo Tailwind utility palette *****/
			.p-4{padding:1rem}.p-6{padding:1.5rem}.px-4{padding-left:1rem;padding-right:1rem}.py-12{padding-top:3rem;padding-bottom:3rem}
			.mx-auto{margin-left:auto;margin-right:auto}.max-w-6xl{max-width:72rem}
			.flex{display:flex}.items-center{align-items:center}.justify-between{justify-content:space-between}.gap-4{gap:1rem}
			.text-sm{font-size:.875rem}.font-bold{font-weight:700}.text-slate-900{color:#0f172a}.text-slate-600{color:#475569}
			.bg-white{background:#fff}.bg-purple-600{background:#7c3aed}.hover\\:bg-purple-700:hover{background:#6d28d9}
			.text-white{color:#fff}.rounded-lg{border-radius:.5rem}.rounded-full{border-radius:999px}.shadow{box-shadow:0 8px 30px rgba(2,6,23,.08)}
			.border-b{border-bottom:1px solid #e5e7eb}.border-t{border-top:1px solid #e5e7eb}
			.inline-flex{display:inline-flex}.transition{transition:all .2s ease}.hover\\:scale-\[1\.01\]:hover{transform:scale(1.01)}
		</style>
	</head>
	<body class="bg-white">
		<header class="border-b">
			<div class="max-w-6xl mx-auto px-4 p-4 flex items-center justify-between">
				<a href={`${base}`} class="text-slate-900 font-bold" aria-label="MIFF Home">MIFF</a>
				<Nav />
			</div>
		</header>

		<main id="main" role="main">
			<slot />
		</main>

		<footer class="border-t">
			<div class="max-w-6xl mx-auto px-4 p-4 text-sm text-slate-600">
				<p>Remix-safe license. Contributors welcome. <a class="text-slate-900" href={`${base}contributors/onboarding`}>Contributor Guide</a></p>
			</div>
		</footer>
	</body>
</html>