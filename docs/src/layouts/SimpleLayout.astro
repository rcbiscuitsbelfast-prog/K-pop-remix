---
import Nav from '../components/Nav.astro';
const title = Astro.props.title || 'MIFF';
const description = Astro.props.description || 'Modular, CLI-first, engine-agnostic game dev for remixers and contributors.';
const base = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="stylesheet" href={`${base}styles/global.css`} />
	</head>
	<body class="bg-white font-sans">
		<header class="border-b border-gray-200">
			<div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
				<a href={`${base}`} class="text-slate-900 font-bold text-xl hover:text-purple-700 transition-colors" aria-label="MIFF Home">
					<span class="inline-flex items-center justify-center w-8 h-8 bg-purple-600 text-white rounded-lg mr-2 font-bold">M</span>
					MIFF
				</a>
				<Nav />
			</div>
		</header>

		<main id="main" role="main">
			<slot />
		</main>

		<footer class="border-t border-gray-200 bg-gray-50">
			<div class="max-w-6xl mx-auto px-4 py-6 text-sm text-slate-600">
				<p class="text-center">
					Remix-safe license. Contributors welcome. 
					<a class="text-purple-700 hover:text-purple-800 hover:underline font-medium" href={`${base}contributors/onboarding`}>
						Contributor Guide
					</a>
				</p>
			</div>
		</footer>
	</body>
</html>