---
import Nav from '../components/Nav.astro';
import '../styles/global.css';
const title = Astro.props.title || 'MIFF';
const description = Astro.props.description || 'Modular, CLI-first, engine-agnostic game dev for remixers and contributors.';
const base = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="bg-white font-sans">
		<div class="max-w-4xl mx-auto p-6">
			<header class="bg-purple-600 text-white p-4 sticky top-0 shadow">
				<div class="flex items-center justify-between">
					<a href={`${base}`} class="text-white font-bold text-xl hover:text-purple-300 transition-colors" aria-label="MIFF Home">
						<span class="inline-flex items-center justify-center w-8 h-8 bg-white text-purple-600 rounded-lg mr-2 font-bold">M</span>
						MIFF
					</a>
					<Nav />
				</div>
			</header>

			<main class="flex flex-col gap-6">
				<slot />
			</main>

			<footer class="bg-gray-100 text-sm text-center p-4 mt-12">
				<p>
					Remix-safe license. Contributors welcome. 
					<a class="text-purple-700 hover:text-purple-800 hover:underline font-medium" href={`${base}contributors/onboarding`}>
						Contributor Guide
					</a>
				</p>
			</footer>
		</div>
	</body>
</html>