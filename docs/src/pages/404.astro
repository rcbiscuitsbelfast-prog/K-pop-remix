---
const base = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Page Not Found — MIFF</title>
	</head>
	<body style="font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Noto Sans,Arial,sans-serif; background:#f8fafc; color:#0f172a;">
		<main style="max-width:48rem;margin:4rem auto;padding:0 1rem;">
			<h1 style="font-size:2rem;margin:0 0 .5rem;">404 — Page Not Found</h1>
			<p style="color:#475569;">The page you were looking for doesn’t exist. Try one of these links instead:</p>
			<ul style="display:flex;flex-wrap:wrap;gap:.75rem;margin:1rem 0 0;padding:0;list-style:none;">
				<li><a style="background:#7c3aed;color:#fff;padding:.6rem .9rem;border-radius:999px;text-decoration:none;" href={`${base}`}>Home</a></li>
				<li><a style="background:#7c3aed;color:#fff;padding:.6rem .9rem;border-radius:999px;text-decoration:none;" href={`${base}modules/`}>Modules</a></li>
				<li><a style="background:#7c3aed;color:#fff;padding:.6rem .9rem;border-radius:999px;text-decoration:none;" href={`${base}docs/`}>Docs</a></li>
				<li><a style="background:#7c3aed;color:#fff;padding:.6rem .9rem;border-radius:999px;text-decoration:none;" href={`${base}contributors/onboarding`}>Contributors</a></li>
			</ul>
		</main>
	</body>
</html>