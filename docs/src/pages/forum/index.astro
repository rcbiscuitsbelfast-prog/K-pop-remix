---
import SimpleLayout from '../../layouts/SimpleLayout.astro';
const base = import.meta.env.BASE_URL || '/';
---

<SimpleLayout title="Forum — MIFF" description="Community discussions and support">
	<section class="py-16" aria-labelledby="forum-title">
		<div class="max-w-6xl mx-auto px-4">
			<div class="mb-8 text-center">
				<h1 id="forum-title" class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
					💬 Community Forum
				</h1>
				<p class="text-lg text-slate-600 leading-relaxed">
					Connect with the MIFF community, ask questions, and share your projects.
				</p>
			</div>
			
			<div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
				<div class="mb-8">
					<div class="text-6xl mb-4">🚧</div>
					<h2 class="text-2xl font-semibold text-slate-900 mb-4">Coming Soon</h2>
					<p class="text-slate-600 mb-6">
						Community discussions and support forum are currently under development.
					</p>
				</div>
				
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a 
						href={`${base}`}
						class="inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-colors shadow-lg hover:shadow-xl"
					>
						🏠 Return Home
					</a>
					<a 
						href="https://github.com/miffframework"
						class="inline-flex items-center px-6 py-3 bg-gray-800 hover:bg-gray-900 text-white font-semibold rounded-lg transition-colors shadow-lg hover:shadow-xl"
						rel="noopener noreferrer"
					>
						🐙 GitHub Discussions
					</a>
				</div>
			</div>
		</div>
	</section>
</SimpleLayout>