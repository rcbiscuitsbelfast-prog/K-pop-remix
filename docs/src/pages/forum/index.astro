---
import SimpleLayout from '../../layouts/SimpleLayout.astro';
const base = import.meta.env.BASE_URL || '/';
---

<SimpleLayout title="Forum — MIFF" description="Community discussions and support">
	<section class="text-center py-12">
		<div class="mb-8">
			<h1 class="text-3xl font-bold text-purple-700 mb-4">
				💬 Community Forum
			</h1>
			<p class="text-lg text-gray-600">
				Connect with the MIFF community, ask questions, and share your projects.
			</p>
		</div>
		
		<div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
			<div class="mb-8">
				<div class="text-6xl mb-4">🚧</div>
				<h2 class="text-2xl font-semibold text-gray-900 mb-4">Coming Soon</h2>
				<p class="text-gray-600 mb-6">
					Community discussions and support forum are currently under development.
				</p>
			</div>
			
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a 
					href={`${base}`}
					class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg transition-colors font-semibold shadow-lg hover:shadow-xl"
				>
					🏠 Return Home
				</a>
				<a 
					href="https://github.com/miffframework"
					class="bg-gray-800 hover:bg-gray-900 text-white px-6 py-3 rounded-lg transition-colors font-semibold shadow-lg hover:shadow-xl"
					rel="noopener noreferrer"
				>
					🐙 GitHub Discussions
				</a>
			</div>
		</div>
	</section>
</SimpleLayout>